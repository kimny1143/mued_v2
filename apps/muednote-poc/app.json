{
  "expo": {
    "name": "MUEDnote PoC",
    "slug": "muednote-poc",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.glassworks.muednote.poc",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "音声をテキストに変換するためにマイクを使用します。録音データはデバイス上でのみ処理されます。",
        "UIBackgroundModes": ["audio"]
      }
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "音声をテキストに変換するためにマイクを使用します。"
        }
      ]
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
